<%# <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reservation Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
</head>
<body> %>

  <div class="container-fluid main-container" style="background-color: black">
    <div class="row justify-content-center align-items-center gap-3">
      <div class="col" style="margin-top: 55px">
        <div class="card">
          <div class="card-header" style="background-color: black">
            <h1 class="card-title" style="color: white"><%= @brain.title %></h1>
          </div>
          <div class="card-body">
            <div class="card">
              <div style="width: 100%; height: 100%; position: relative">
              <% if @brain.photo.attached? %>
               <%= cl_image_tag @brain.photo.key, height: "200px" %>
              <% end %>
            </div>
              <div class="card-body">
                <h5 class="card-title"><%= @brain.title %></h5>
                <p class="card-text"><%= image_tag "euros.png", width:"3%"%> <%= @brain.price %> /jour</p>
                <p class="card-text"><%= image_tag "brain.png", width:"3%"%> <%= @brain.specialty %></p>
                <p class="card-text"><%= image_tag "home.png", width:"3%"%> <%= @brain.address %></p>
                <p class="card-text"><strong></strong> <%= @brain.description %></p>
                <a href="<%= @brain.wiki_page %>" class="btn btn-pink" style="color: white" target="_blank"><%= image_tag "wiki.png", width:"3%"%></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col" style="padding-top: 30px">
        <div class="card">
          <div class="card-header" style="background-color: black">
            <h1 class="card-title" style="color: white">Make a reservation</h1>
          </div>
          <div class="card-body">
            <form>
              <div class="mb-3">
                <label for="start-date" class="form-label">Start Date</label>
                <input type="text" class="form-control" id="start-date">
              </div>
              <div class="mb-3">
                <label for="end-date" class="form-label">End Date</label>
                <input type="text" class="form-control" id="end-date">
              </div>
              <button type="submit" class="btn btn-danger"  style="color: white">Reserver</button>
              <p class="mt-3 text-muted">You wonâ€™t be charged yet</p>
            </form>
            <hr>
            <div class="d-flex justify-content-between">
              <p>$79 x 7 days</p>
              <p>$555</p>
            </div>
            <div class="d-flex justify-content-between">
              <p>Weekly discount</p>
              <p>-$28</p>
            </div>
            <div class="d-flex justify-content-between">
              <p>Service fee</p>
              <p>$83</p>
            </div>
            <hr>
            <div class="d-flex justify-content-between">
              <p><strong>Total</strong></p>
              <p><strong>$701</strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>

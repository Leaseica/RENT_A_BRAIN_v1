<div class="brain-card">
  <div class="photo">
    <% if brain.photo.attached? %>
      <%= cl_image_tag(brain.photo.key,
                   width: 300, height: 200,
                   crop: "thumb", gravity: "face",
                   alt: "Photo de #{brain.title}") %>
      <% end %>

  </div>
  <div class="content">
    <h2 class="title"><%= brain.title %></h2>
    <h3 class="details">
      <strong><%= brain.price %>€</strong> /jour
      <span>•</span>
      <%= brain.specialty %>
    </h3>
    <h3 class="address">
